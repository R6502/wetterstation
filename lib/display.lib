
#include <io.h>
#include <i2c.h>

#include <delay.h>

#include "display.h"

void display_pos (unsigned char pos)
{
  delay_ms (1);
  pos += 0x80;                          //um 0x80 erhöhen (->Datenblatt)
  write_instr (pos);                   //Cursor auf pos setzen
}


void write_char (unsigned char data)
{
  unsigned char hbyte,lbyte;

  lbyte=data<<4;                          //hbyte: data viermal rechtsscheiben

  hbyte=data&0xF0;                        //lbyte: Bits 7...4 mit 0 maskieren

  //i2c_init(); kann hier weg

  i2c_start();

  i2c_write(0x4E); // Adresse 0x27 << 1 = 0x4e

  i2c_write(hbyte|0x01);
  i2c_write(hbyte|0x05);
  i2c_write(hbyte|0x01);

  i2c_write(lbyte|0x01);
  i2c_write(lbyte|0x05);
  i2c_write(lbyte|0x01);

  //i2c_write(0x00);

  i2c_stop();

  delay_ms(1);
}


void write_instr (unsigned char instr)
{
  unsigned char hbyte,lbyte;

  lbyte=data<<4;

  hbyte=data&0xF0;

  // i2c_init(); kann hier weg

  i2c_start();

  i2c_write (0x4E); // Adresse 0x27 << 1 = 0x4e

  i2c_write (hbyte|0x00);
  i2c_write (hbyte|0x04);
  i2c_write (hbyte|0x00);

  i2c_write (lbyte|0x00);
  i2c_write (lbyte|0x04);
  i2c_write (lbyte|0x00);

  // i2c_write(0x00);

  i2c_stop();

  delay_ms(1);
}


void lcd_init (void)
{
  delay_ms (15);

  //i2c_init();

  i2c_start ();

  i2c_write (0x4E);

  i2c_write (0x30);
  i2c_write (0x34);
  i2c_write (0x30);

  delay_ms (5);

  i2c_write (0x30);
  i2c_write (0x34);
  i2c_write (0x30);

  delay_ms(5);

  i2c_write (0x30);
  i2c_write (0x34);
  i2c_write (0x30);

  delay_ms (1);

  i2c_write (0x20);
  i2c_write (0x24);
  i2c_write (0x20);

  delay_ms (1);

  // 0x28 schicken, 2 Zeilen + Function-Set
  // write_instr (0x28) schicken, 2 Zeilen + Function-Set

  i2c_write (0x20);
  i2c_write (0x24);
  i2c_write (0x20);

  i2c_write (0x80);
  i2c_write (0x84);
  i2c_write (0x80);

  delay_ms (1);

  // 0x0f schicken, Display-Control
  i2c_write (0x00);
  i2c_write (0x04);
  i2c_write (0x00);

  i2c_write (0xF0);
  i2c_write (0xF4);
  i2c_write (0xF0);

  delay_ms (1);

  //0x06, Display-Mode: DDRAM-Adresse +1 nach Schreibvorgang, Display nicht schieben
  i2c_write (0x00);
  i2c_write (0x04);
  i2c_write (0x00);

  i2c_write (0x60);
  i2c_write (0x64);
  i2c_write (0x60);

  // 0x01, LCD Clear fehlt

  //i2c_write(0x00);

  i2c_stop ();

  delay_ms (1);
}



